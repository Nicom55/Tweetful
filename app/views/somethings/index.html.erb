<h1>Listing somethings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @somethings.each do |something| %>
      <tr>
        <td><%= something.name %></td>
        <td><%= link_to 'Show', something %></td>
        <td><%= link_to 'Edit', edit_something_path(something) %></td>
        <td><%= link_to 'Destroy', something, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Something', new_something_path %>
